        <script><![CDATA[var userGr = new GlideRecord("sys_user");
userGr.addQuery("sys_id", gs.getUserID());
userGr.query();

while (userGr.next()) {
	userGr.u_availability_status = "Available";
	userGr.update();
}

var operatorAssignmentGr = new GlideRecord("x_cdltd_chargesos_operator_assignments");
operatorAssignmentGr.addQuery("request_id", current.sys_id);
operatorAssignmentGr.addQuery("assigned_to", gs.getUserID());
operatorAssignmentGr.addQuery("status", "charging");
operatorAssignmentGr.addQuery("state", 2);
operatorAssignmentGr.query();

while (operatorAssignmentGr.next()) {
	operatorAssignmentGr.status = "completed";
	operatorAssignmentGr.state = 3;
	operatorAssignmentGr.update();
}

current.request_status = "completed";
current.time_completed = new GlideDateTime();
current.battery_charged = 100;
current.update();]]></script>
