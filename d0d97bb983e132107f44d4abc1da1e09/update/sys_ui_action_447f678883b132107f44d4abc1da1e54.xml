        <name>Accept Request</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[var userGr = new GlideRecord("sys_user");
userGr.addQuery("sys_id", gs.getUserID());
userGr.query();

var location;

while (userGr.next()) {
	location = userGr.location;
	userGr.u_availability_status = "Busy";
	userGr.update();
}

var operatorAssignmentGr = new GlideRecord("x_cdltd_chargesos_operator_assignments");
operatorAssignmentGr.addQuery("request_id", current.sys_id);
operatorAssignmentGr.addQuery("status", "assigned");
operatorAssignmentGr.addQuery("state", 1);
operatorAssignmentGr.query();

if (!operatorAssignmentGr.next()) {
	operatorAssignmentGr.initialize(); 
	operatorAssignmentGr.assigned_to = gs.getUserID(); 
	operatorAssignmentGr.request_id = current.sys_id; 
	operatorAssignmentGr.operator_location = location; 
	operatorAssignmentGr.short_description = 'Assigned to service ' + current.user.first_name + "'s vehicle at " + current.location.name + ", license plate - " + current.vehicles.license_plate; 
	operatorAssignmentGr.insert();
}

current.assigned_operator = gs.getUserID();
current.request_status = "assigned";
current.time_operator_assigned = new GlideDateTime();
current.update();]]></script>
