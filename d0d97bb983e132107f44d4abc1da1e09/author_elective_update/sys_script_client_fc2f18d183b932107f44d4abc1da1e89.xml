        <description>Add colour depending on Battery Percentage</description>
        <field/>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Style add colour</name>
        <order/>
        <script><![CDATA[function onLoad() {
  addColorDot(newValue);
}

function addColorDot(value) {
    // Remove any existing dot
    var existing = document.querySelector('#battery_percentage');
    if (existing) existing.remove();

    // Determine color
    var num = parseInt(value, 10);
    if (isNaN(num)) return; // no dot if not a number

    // Determine color based on ranges
    var color = '';
    if (num < 20) {
        color = 'red';
    } else if (num >= 21 && num <= 79) {
        color = 'orange';
    } else if (num >= 80 && num <= 100) {
        color = 'green';
    } else {
        return; // out of range → no dot
    }


    // Create dot
    var dot = document.createElement('span');
    dot.id = 'battery_percentage_dot';
    dot.style.cssText = `
        display:inline-block;
        width:10px;
        height:10px;
        border-radius:50%;
        background:${color};
        margin-left:6px;
    `;

    // Attach to field label
    var label = document.querySelector('label[for="battery_percentage"]');
    if (label) label.appendChild(dot);
}

   
]]></script>
